alias dir='dir --color=auto'

# git
function gitc()
{
  echo -n "Introduce el header del commit: \n"
  read header

  echo -n "Introduce el body del commit: \n"
  read body

  git add .
  git commit -m "$header" -m "$body"

  echo "Commit realizado correctamente"
}
